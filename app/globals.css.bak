@tailwind base;
@tailwind components;
@tailwind utilities;

/* Design tokens */
:root{
  --bg: #fbfbfc;
  --card: #ffffff;
  --muted: #6b7280;
  --brand: #1f1f23;
  --accent: #7c5bff;
}

/* Base */
html,body,#__next{height:100%}
body { background: var(--bg); color: var(--brand); font-family: inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue"; }

/* Focus */
:where(a,button,input,textarea)[tabindex]:focus-visible, :where(a,button,input,textarea):focus-visible{
  outline: none;
  box-shadow: 0 0 0 4px rgba(124,91,255,0.18);
  border-radius: 8px;
}

/* Card */
.card {
  background: var(--card);
  border-radius: 1rem;
  box-shadow: var(--tw-shadow, 0 6px 18px rgba(16,24,40,0.06));
  border: 1px solid rgba(16,24,40,0.04);
}

/* small utilities (for consistent spacing) */
.container-max {
  max-width: 1100px;
}
